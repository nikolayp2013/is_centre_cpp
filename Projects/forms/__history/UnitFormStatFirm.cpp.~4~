	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TFormStatFirm::Button2Click(TObject *Sender)
{
	Close();
}
//---------------------------------------------------------------------------
void __fastcall TFormStatFirm::CheckBox1Click(TObject *Sender)
{
	IBQuery1->Close();
	IBQuery1->Filter = "cnt20<>0";
	IBQuery1->Filtered = true;
	IBQuery1->Open();
}
